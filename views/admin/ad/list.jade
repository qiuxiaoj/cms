extends layout

block main
  .panel.panel-default
    .panel-heading.clearfix
      h3.panel-title 广告列表
        
    .panel-body.clearfix
      a.btn.btn-primary.btn-sm.pull-right(href="/admin/ad/new")
        i.fa.fa-plus 
        |新建广告
      table.table.table-hover
        thead
          tr
            th.col 内容
            th #
        tbody    
          - each ad in ads
            tr
              td 
                ul.media-list
                  li.media
                    a.pull-left
                      img(src="#{ad.image_url}" style="width:150px;height:50px;" class="media-object img-thumbnail img-responsive") 
                    div.media-body
                      h4.media-heading #{ad.title}
                      =ad.desc
              td 
                a.btn.btn-sm.btn-success(href="/admin/ad/#{ad._id}/edit") 
                  i.fa.fa-edit  
                  |编辑
                a.btn.btn-sm.btn-warning.margin-sm(href="/admin/ad/#{ad._id}/delete") 
                  i.fa.fa-trash-o  
                  |删除              
      .pull-right
        !{createPagination(total, 15)}  