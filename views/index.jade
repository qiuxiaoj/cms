extends layout
include mixins/focus

block content
  .row
    .col-sm-3
      .panel.panel-default
        .panel-heading
          i.fa.fa-volume-up.margin-right-sm.text-red 
          |最新动态
          .pull-right
            |更多
        .panel-body
          ul.list-unstyled
            - each art in news
              li
                i.fa.fa-caret-right.margin-right-sm
                a(href="/article/#{art._id}") #{text_cut(art.title, 14)} 
    .col-sm-9
      +carousel(advs)
      br     
  .panel.panel-default.clearfix
    .panel-heading 
      |特价商品
      .pull-right
        a(href="/goods/type/1")
          |更多
    .panel-body
      - each item in low_goods
        .col-sm-3(style="margin-bottom: 18px;")
          div
            a.thumbnail(href="/goods/#{item._id}")
              img.image-sm(src='#{item.image_url}')
            .caption
              h5
                a(href="/goods/#{item._id}") #{item.name}           
