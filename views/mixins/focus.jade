mixin carousel(advs)
  .carousel.slide#home-carousel(data-ride="carousel")
    ol.carousel-indicators
      li.active(data-target="#home-carousel" data-slide-to="0")
      li(data-target="#home-carousel" data-slide-to="1")
      li(data-target="#home-carousel" data-slide-to="2")
    .carousel-inner
      - advs.forEach(function(ad, idx){     
        .item(class="#{idx == 0 ? 'active': ''}") 
          img.img-responsive(src="#{ad.image_url}" style="width: 850; height: 280px;")
          div.carousel-caption
            - if (ad.title != '')
              h3= ad.title
            - if (ad.desc != '')
              p= ad.desc 
      - })          
    a.left.carousel-control(href="#home-carousel" data-slide="prev")
      span.glyphicon.glyphicon-chevron-left
    a.right.carousel-control(href="#home-carousel" data-slide="next")
      span.glyphicon.glyphicon-chevron-right    